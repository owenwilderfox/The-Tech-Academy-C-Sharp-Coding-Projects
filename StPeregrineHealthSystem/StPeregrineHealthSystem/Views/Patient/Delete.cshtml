@model StPeregrineHealthSystem.Models.Patient

@{
    ViewBag.Title = "Delete Medical Record";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this patient's medical record?</h3>
<div>
    <h4>Patient</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <strong>First Name</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            <strong>Last Name</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            <strong>Date of Birth</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BirthDate)
        </dd>

        <dt>
            <strong>Primary Care Provider</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Physician</dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
